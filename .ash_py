#  $HOME/.ash_py

#  move __pycache__ directory  ( Python3.8+ )
export PYTHONPYCACHEPREFIX=/tmp/__pycache__

#  venv  - module ( Python3.4+ )

#  pydoc3    <module_name>
#  pydoc3 -w <module_name / package_name>


alias py-doc='pydoc3 -p 37000'
alias py-install='pip3 install --user'
alias py-list='pip3 list'
alias py-path='python3 -c "import sys; print (\"\n\".join(sys.path))"'  # sys.path
alias py-site='python3 -m site'
alias py-uninstall='pip3 uninstall'


##### alias 2 function #####


alias py-man='__py_man'
alias py-show='__py_show'


      __py_man() { if [ -n "$1" ]; then pydoc3 $1 > /tmp/$1.man ; else echo "usage: py-man <module_name>" ; fi }
      __py_show() { if [ -n "$1" ]; then pip3 show $1 ; else echo "usage: py-show <package>" ; fi }


