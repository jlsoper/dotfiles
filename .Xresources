!  $HOME/.Xresources
!
!  This file sets certain defaults for the X window system.
!  Ubuntu -> *loginShell: true
!
!  fonts -> xlsfonts
!  reload X settings -> xrdb -load ~/.Xresources

*colorBD:         yellow
*colorBDMode:     true
*colorUL:         cyan
*colorULMode:     true
*cursorColor:     green
*font:            9x15
*geometry:        146x42
*saveLines:       1536

xterm*font:       10x20
xterm*background: black
xterm*foreground: white
xterm*geometry:   130x32
xterm*scrollBar:  true

urxvt*termName:   xterm
urxvt*background: black
urxvt*foreground: white

urxvt*loginShell: true
xterm*loginShell: true

