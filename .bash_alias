#  $HOME/.bash_alias  ( alias / unalias )

#  scp <source-file> user@host:<path>
#  scp user@host:<path of source file> <local target for file>

#  grep parameters [ -c count | -i ignorecase | -r recursive | -w whole word ]

#  touch -d 'Aug 28 11:07:53 EDT 2008' file1.txt
#  touch -t 200808281107.53            file1.txt
#  touch -r                            file1.txt file2.txt

#  ln -s source_file link_name

#  dscl


alias bash_options='shopt'
alias battery-info='pmset -g batt'

alias bzip2info='tar -tvjf'
alias bzip2test='bzip2 -tv'

alias chdir='pwd'

alias cpu-info='sysctl machdep.cpu.brand_string'
alias del='rm -f'
alias deltree='rm -rf'
alias df='df -kH'

alias   dir='ls -hl --color'
alias dir-b='ls -1A --color'  # single column view
alias dir-d='ls -dhl --color'  # directory listing with *
alias dir-f='ls -ALhlp --color | grep "/"'  # folder only view
alias dir-h='ls -adhl --color .*'  # hidden files view
alias dir-p='ls -Ahl | more'  # single page view
alias dir-s='ls -AhlrS --color'  # size view
alias dir-t='ls -Ahlrt --color'  # timestamp view
alias dir-w='ls -Alx --color'  # wide view
alias  pdir='ls -Ahl'  # printable view

alias dircmp='diff -r'
alias du='du -kh'

alias edit='vim'

alias fc='vimdiff'
alias fc-b='cmp'

alias fgrep='grep -In --color=auto'  # show line numbers with results

alias grupos='groups | tr " " "\n"'

alias gzipinfo='tar -tvzf'
alias gziptest='gzip -tv'

alias ipconfig='/usr/sbin/ipconfig getifaddr en0'
alias ipconfig-eth='/usr/sbin/ipconfig getifaddr en3'

alias iso2usb='sudo dd if=/tmp/temp.iso of=/dev/sdb bs=4M conv=fdatasync'

alias md='mkdir'

alias mem='vm_stat'

alias mount_iso='sudo mount -t iso9660 /tmp/temp.iso /mnt/iso -o loop'
alias mount_usb='sudo mount /dev/sdc1 /mnt/usb/'

alias nbrfiles='echo $(ls -A1 | wc -l)'

alias path='echo -e ${PATH//:/\\n}'

alias permiso-d='find . -type d -exec chmod 0755 {} \;'
alias permiso-f='find . -type f -exec chmod 0644 {} \;'

alias pjobs='lpq'
alias pjobs_cancel='lprm'
alias print='lpr -o cpi=14 -o prettyprint'

alias printenv='env | sort'
alias ps='ps x -o user,pid,ppid,tty,command'
alias pscan='netstat -natup'
alias pserver='lpstat -r'  # CUPS server status

alias rar-x='unrar -x'
alias rarinfo='unrar -t'

alias rd='rmdir'

alias search='find . 2>/dev/null -iname'  # search "*.tar.gz"

alias shrink_file='truncate -s 0'

alias sql-admin='mysql --tee=/tmp/sql-admin.log -u root -p'  # notee

alias tail='tail -n 35'

alias tar-c='tar -cvvf'
alias tarinfo='tar -tvf'

alias tbzip2='tar -cvvjf'  # *.tbz2
alias tgzip='tar -cvvzf'  # *.tgz

alias tracert='tracepath'  # traceroute

alias type='cat -e'  # ^M$ -> \r\n

alias umount_iso='sudo umount /mnt/iso/'
alias umount_usb='sudo umount /mnt/usb/'

alias ver='sw_vers;echo "";uname -mrs'
alias view='vim -MR'

alias zip='zip -r'
alias zipinfo='unzip -Z'
alias ziptest='unzip -tq'


alias 7zip='7z a -t7Z'
alias 7zipinfo='7z l'
alias 7ziptest='7z t'

