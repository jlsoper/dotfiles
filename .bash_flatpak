#  $HOME/.bash_flatpak


alias yum-addRepo='sudo flatpak remote-add --if-not-exists flathub https://dl.flathub.org/repo/flathub.flatpakrepo'
alias yum-delRepo='sudo flatpak remote-delete flathub'

alias yum-help='flatpak -h'
alias yum-info='flatpak info'

#  ~/.var/app
alias yum-install='YUM_install'
alias yum-uninstall='YUM_uninstall'

alias yum-list-installed='flatpak list'
alias yum-repolist='flatpak remotes'
alias yum-search='flatpak search'


##########

 YUM_install()   { if [ -n "$1" ]; then sudo flatpak install flathub "$1" ; else echo "usage: yum-install <Application ID>" ; fi }
 YUM_uninstall() { if [ -n "$1" ]; then sudo flatpak uninstall --delete-data "$1" ; else echo "usage: yum-uninstall <Application ID>" ; fi }


