#  $HOME/.ash_pkg


alias pkg-contents='bsd_contents'
alias pkg-info='bsd_info'
alias pkg-list-installed='apk info -v'
alias pkg-listfiles='bsd_listfiles'
alias pkg-locate='bsd_locate'
alias pkg-names='apk info'
alias pkg-repolist='cat /etc/apk/repositories'
alias pkg-search='apk search -v -d'


##########



 bsd_contents() { if [ -n "$1" ]; then tar -tvzf "$1" ; else echo "usage: pkg-contents <file.apk>" ; fi }  # *.tar.gz
 bsd_info() { if [ -n "$1" ]; then apk info -a "$1" ; else echo "usage: pkg-info <package>" ; fi }
 bsd_listfiles() { if [ -n "$1" ]; then apk -L info "$1" ; else echo "usage: pkg-listfiles <package>" ; fi }
 bsd_locate() { if [ -n "$1" ]; then apk info --who-owns $(which "$1") ; else echo "usage: pkg-locate <file>" ; fi }


