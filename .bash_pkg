#  $HOME/.bash_pkg


##########

 pkg-update()  { pkgman refresh ; }
 pkg-install() { pkgman install ; }
 pkg-remove()  { pkgman uninstall ; }
 pkg-upgrade() { pkgman update ; }


 pkg-info() { if [ -n "$1" ]; then pkgman info "$1" ; else echo "usage: $FUNCNAME <package>" ; fi }
 pkg-repolist() { pkgman list-repos ; }
 pkg-search() { if [ -n "$1" ]; then pkgman search "$1" ; else echo "usage: $FUNCNAME <search-string>" ; fi }

