#  $HOME/.ash_flatpak

#  /var/lib/flatpak


# doas apk add flatpak
# doas apk add gnome-software-plugin-flatpak


alias yum-addRepo='doas flatpak remote-add --if-not-exists flathub https://dl.flathub.org/repo/flathub.flatpakrepo'
alias yum-delRepo='doas flatpak remote-delete flathub'

alias yum-help='flatpak -h'
alias yum-info='flatpak info'
alias yum-install='YUM_install'
alias yum-list-installed='flatpak list'
alias yum-repolist='flatpak remotes'
alias yum-search='flatpak search'


##########

 YUM_install() { if [ -n "$1" ]; then doas flatpak install flathub "$1" ; else echo "usage: yum-install <Application ID>" ; fi }


